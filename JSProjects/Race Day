let raceNumber = Math.floor(Math.random() * 1000);
console.log(raceNumber);
let runner = true;
let runnerName = 'Juan';
let runnersAge = 18;
let registered = 'night';

if (runnersAge >= 18 && registered === 'early') {
   raceNumber += 1000, console.log(`${runnerName} your race will start at 9:30 am. And your career number is ${raceNumber}`)
}  else if (runnersAge >= 18 && registered !== 'early') {
   raceNumber += 1000, console.log(`${runnerName} your race will start at 11:00 am. And your carrer number is ${raceNumber}`)
}  else if (runnersAge < 18) {
  console.log(`${runnerName} your race will start at 12:30 am. And your career number is ${raceNumber}`)
}
